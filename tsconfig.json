{
  "compilerOptions": {
    "target": "es6",                          // Spécifie la version ECMAScript cible
    "module": "commonjs",                     // Spécifie le système de modules
    "outDir": "./dist",                       // Répertoire de sortie pour les fichiers compilés
    "rootDir": "./src",                       // Répertoire racine des fichiers d'entrée
    "strict": true,                           // Active toutes les vérifications strictes
    "esModuleInterop": true,                  // Active l'interopérabilité des modules ES
    "skipLibCheck": true,                     // Ignore la vérification des fichiers de définition de type
    "forceConsistentCasingInFileNames": true  // Force la casse cohérente des noms de fichiers
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}